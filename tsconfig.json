{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["vitest/globals", "vite/client"],
    "paths": {
      "react-ai-query": ["./dist/index.d.ts", "./src/index.ts"]
    }
  },
  "include": [
    "src",
    "tests",
    "example",
    "tsup.config.ts",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.cjs"
  ],
  "exclude": ["dist", "node_modules"]
}
